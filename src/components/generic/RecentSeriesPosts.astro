---
import { getCollection } from 'astro:content';
import SeriesList from '../series/SeriesList.astro';
import { Card } from '@eliancodes/brutal-ui';
import { Button } from '@eliancodes/brutal-ui';

interface Props {
  count?: number;
}

const { count } = Astro.props;

const posts = await getCollection('series').then((posts) =>
  posts.reverse().slice(0, count ?? 3)
);
---

<section class='mt-8'>
  <Card>
    <div class='flex justify-between items-start'>
      <h2 class='text-2xl md:text-4xl lg:text-6xl mb-8 dm-serif'>
        Publicaciones Recientes
      </h2>
      <div class='hidden md:block'>
        <Button href='/series/'>Ir al blog &rarr;</Button>
      </div>
      <div class='block md:hidden'>
        <Button href='/series/'>al blog</Button>
      </div>
    </div>
    <SeriesList posts={posts} />
  </Card>
</section>
